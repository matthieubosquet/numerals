{
  "name": "numerals",
  "version": "0.1.0",
  "description": "Convert numbers to standard numeral forms.",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "format": "prettier --write \"{package.json,README.md,src/**/*.ts}\"",
    "serve": "http-server dist -c0 -g",
    "lint": "eslint --ext .ts --fix ./src/.",
    "test": "jest \"src/.*\\.test\\.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matthieubosquet/numerals.git"
  },
  "keywords": [
    "roman numerals",
    "numerals",
    "converter"
  ],
  "author": "Matthieu Bosquet",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matthieubosquet/numerals/issues"
  },
  "homepage": "https://github.com/matthieubosquet/numerals#readme",
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "eslint-plugin-import": "^2.22.0",
    "http-server": "^0.12.3",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rollup": "^2.18.1",
    "rollup-plugin-loadz0r": "^0.7.2",
    "rollup-plugin-typescript2": "^0.27.1",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 11,
      "ecmaVersionHint": "3, 5 (default), 6 (2015), 7 (2016), 8 (2017), 9 (2018), 10 (2019) or 11 (2020)",
      "sourceType": "module",
      "sourceTypeHint": "script (default), module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-console": "error",
      "semi": "error"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "prettier": {
    "tabWidth": 4,
    "trailingComma": "none",
    "overrides": [
      {
        "files": "**/*.json",
        "options": {
          "tabWidth": 2
        }
      }
    ]
  }
}
